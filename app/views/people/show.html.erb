<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4 py-8">
  <div class="w-full max-w-3xl bg-white shadow-md rounded-xl p-8 space-y-8">

    <!-- Cabeçalho -->
    <div class="flex items-center justify-between border-b pb-6">
      <h1 class="text-2xl font-bold text-gray-800"><%= @person.name %></h1>
    </div>

    <!-- Informações Pessoais -->
    <section class="space-y-6">
      <h2 class="text-lg font-semibold text-gray-700 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        Informações Pessoais
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-1">
          <label class="block text-sm font-medium text-gray-700">Nome</label>
          <div class="mt-1 px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg text-gray-800 w-full">
            <%= @person.name %>
          </div>
        </div>
        
        <div class="space-y-1">
          <label class="block text-sm font-medium text-gray-700">Email</label>
          <div class="mt-1 px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg text-gray-800 w-full">
            <%= @person.email %>
          </div>
        </div>
      </div>
    </section>

    <!-- Telefones -->
    <% if @person.phone_numbers.any? %>
      <section class="space-y-6">
        <h2 class="text-lg font-semibold text-gray-700 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Telefones
        </h2>
        
        <div class="space-y-3">
          <% @person.phone_numbers.each do |phone| %>
            <div class="flex items-center justify-between px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg">
              <span class="text-gray-800"><%= phone.number %></span>
              <span class="text-sm text-gray-500 bg-gray-200 px-3 py-1 rounded-full">
                <%= phone.operation_type.capitalize %>
              </span>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>

    <!-- Endereço -->
    <% if @person.address.present? %>
      <section class="space-y-6">
        <h2 class="text-lg font-semibold text-gray-700 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Endereço
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-1">
            <label class="block text-sm font-medium text-gray-700">Rua</label>
            <div class="mt-1 px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg text-gray-800 w-full">
              <%= @person.address.street %>
            </div>
          </div>
          
          <div class="space-y-1">
            <label class="block text-sm font-medium text-gray-700">Cidade</label>
            <div class="mt-1 px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg text-gray-800 w-full">
              <%= @person.address.city %>
            </div>
          </div>
          
          <div class="space-y-1">
            <label class="block text-sm font-medium text-gray-700">Estado</label>
            <div class="mt-1 px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg text-gray-800 w-full">
              <%= @person.address.state %>
            </div>
          </div>
          
          <div class="space-y-1">
            <label class="block text-sm font-medium text-gray-700">CEP</label>
            <div class="mt-1 px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg text-gray-800 w-full">
              <%= @person.address.zp_code %>
            </div>
          </div>
        </div>
      </section>
    <% end %>

    <!-- Ações -->
    <div class="pt-6 border-t border-gray-200 flex justify-end gap-4">
      <%= link_to edit_person_path(@person), class: "inline-flex items-center px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg shadow-sm transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Editar
      <% end %>
      
      <%= link_to people_path, class: "inline-flex items-center px-4 py-2.5 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-lg shadow-sm transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Voltar
      <% end %>
      
      <%= link_to person_path(@person), method: :delete, data: { confirm: "Tem certeza que deseja excluir?" }, class: "inline-flex items-center px-4 py-2.5 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg shadow-sm transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Excluir
      <% end %>
    </div>

  </div>
</div>
