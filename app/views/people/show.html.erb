<!-- Container Central -->
<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4">
  <div class="w-full max-w-4xl bg-white shadow-xl rounded-2xl p-10 space-y-10">

    <!-- Cabeçalho -->
    <div class="flex items-center justify-between">
      <h1 class="text-4xl font-bold text-gray-900"><%= @person.name %></h1>
      <%= link_to "← Voltar", person_path(@person), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>

    </div>

    <!-- Informações Pessoais -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-800 mb-4 border-b pb-2">Informações Pessoais</h2>
      <div class="grid sm:grid-cols-2 gap-6 text-gray-700 text-lg">
        <div>
          <p><span class="font-semibold">Nome:</span> <%= @person.name %></p>
        </div>
        <div>
          <p><span class="font-semibold">Email:</span> <%= @person.email %></p>
        </div>
      </div>
    </section>

    <!-- Telefones -->
    <% if @person.phone_numbers.any? %>
      <section>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4 border-b pb-2">Telefones</h2>
        <ul class="divide-y divide-gray-200">
          <% @person.phone_numbers.each do |phone| %>
            <li class="py-3 flex items-center justify-between">
              <span class="text-lg text-gray-700"><%= phone.number %></span>
              <span class="text-sm text-gray-500 italic"><%= phone.operation_type.capitalize %></span>
            </li>
          <% end %>
        </ul>
      </section>
    <% end %>

    <!-- Endereço -->
    <% if @person.address.present? %>
      <section>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4 border-b pb-2">Endereço</h2>
        <div class="grid sm:grid-cols-2 gap-4 text-gray-700 text-lg">
          <p><strong>Rua:</strong> <%= @person.address.street %></p>
          <p><strong>Cidade:</strong> <%= @person.address.city %></p>
          <p><strong>Estado:</strong> <%= @person.address.state %></p>
          <p><strong>CEP:</strong> <%= @person.address.zp_code %></p>
        </div>
      </section>
    <% end %>

    <!-- Ações -->
    <div class="pt-6 border-t border-gray-200 flex justify-end gap-4">
      <%= link_to "Editar", edit_person_path(@person), class: "bg-yellow-500 hover:bg-yellow-600 text-white font-medium py-2 px-6 rounded-lg" %>
      <%= link_to "Excluir", person_path(@person), method: :delete, data: { confirm: "Tem certeza que deseja excluir?" }, class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-6 rounded-lg" %>
    </div>

  </div>
</div>
